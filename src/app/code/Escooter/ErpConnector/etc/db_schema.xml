<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="vendor_erp_sync" resource="default" engine="innodb" comment="Vendor ERP Sync Table">
        <column xsi:type="int" name="sync_id" unsigned="true" nullable="false" identity="true" comment="Sync ID"/>
        <column xsi:type="int" name="order_id" unsigned="true" nullable="false" comment="Order ID"/>
        <column xsi:type="varchar" name="order_increment_id" nullable="false" length="50" comment="Order Increment ID"/>
        <column xsi:type="varchar" name="status" nullable="false" length="32" default="pending" comment="Sync Status"/>
        <column xsi:type="int" name="attempts" unsigned="true" nullable="false" default="0" comment="Sync Attempts"/>
        <column xsi:type="int" name="max_attempts" unsigned="true" nullable="false" default="5" comment="Maximum Attempts"/>
        <column xsi:type="datetime" name="last_attempt_at" nullable="true" comment="Last Attempt At"/>
        <column xsi:type="datetime" name="next_attempt_at" nullable="true" comment="Last Attempt At"/>
        <column xsi:type="text" name="last_error" nullable="true" comment="Last Error Message"/>
        <column xsi:type="varchar" name="erp_reference" nullable="true" length="255" comment="ERP Reference ID"/>
        <column xsi:type="varchar" name="idempotency_key" nullable="true" length="255" comment="Idempotency Key"/>
        <column xsi:type="text" name="payload" nullable="true" comment="Payload Sent to ERP"/>
        <column xsi:type="text" name="response" nullable="true" comment="Last Response from ERP"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="true" comment="Updated At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="sync_id"/>
        </constraint>
        <index referenceId="VENDOR_ERP_SYNC_ORDER_ID" indexType="btree">
            <column name="order_id"/>
        </index>
        <index referenceId="VENDOR_ERP_SYNC_ORDER_INCREMENT_ID" indexType="btree">
            <column name="order_increment_id"/>
        </index>
        <index referenceId="VENDOR_ERP_SYNC_STATUS" indexType="btree">
            <column name="status"/>
        </index>
        <index referenceId="VENDOR_ERP_SYNC_STATUS_NEXT_ATTEMPT" indexType="btree">
            <column name="status"/>
            <column name="next_attempt_at"/>
        </index>
    </table>
    
    <table name="sales_order" resource="default">
        <column xsi:type="smallint" name="erp_synced" unsigned="false" nullable="false" default="0" comment="ERP Synced Flag"/>
    </table>
</schema>
