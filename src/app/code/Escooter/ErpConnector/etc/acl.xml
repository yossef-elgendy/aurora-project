<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Escooter_ErpConnector::config" title="ERP Connector Configuration" sortOrder="100" />
                        </resource>
                    </resource>
                </resource>
                <resource id="Escooter_ErpConnector::manage" title="Manage ERP Sync" sortOrder="100">
                    <resource id="Escooter_ErpConnector::sync" title="Sync Orders" sortOrder="10" />
                    <resource id="Escooter_ErpConnector::resync" title="Resync Orders" sortOrder="20" />
                    <resource id="Escooter_ErpConnector::viewstatus" title="View Sync Status" sortOrder="30" />
                </resource>
            </resource>
        </resources>
    </acl>
</config>
